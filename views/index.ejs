<%- include ('header') %>
<% if (entries.length) { %>
  <% entries.forEach(entry => { %>
<div class="card">
  <div class="card-header">
    <div class="text-muted float-sm-right">
      <%= entry.published %>
    </div>
    <%= entry.title %>
  </div>
  <div class="card-body">
    <%= entry.body %>
  </div>
</div>
<% }) %>
<% } else { %>
  No entries! <a href="/add-entry">Add one!</a>
<% } %>
<%- include ('footer') %>
